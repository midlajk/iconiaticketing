<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Backup Request Form</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      color: #333;
      background-color: white;
    }
    .container {
      width: 100%;
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    .header {
      text-align: center;
      margin-bottom: 20px;
      padding-bottom: 10px;
      border-bottom: 2px solid #ddd;
    }
    .logo {
      max-width: 200px;
      margin-bottom: 10px;
    }
    h1 {
      color: #2c3e50;
      margin: 10px 0;
    }
    .form-section {
      margin-bottom: 20px;
    }
    .form-row {
      display: flex;
      margin-bottom: 10px;
      border: 1px solid #ddd;
    }
    .form-label {
      background-color: #f5f5f5;
      padding: 10px;
      width: 40%;
      font-weight: bold;
      border-right: 1px solid #ddd;
    }
    .form-value {
      padding: 10px;
      width: 60%;
    }
    .approval-section {
      margin-top: 30px;
    }
    .signature-box {
      border-top: 1px dotted #999;
      margin-top: 40px;
      padding-top: 5px;
      text-align: center;
      width: 200px;
      display: inline-block;
    }
    .signature-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 30px;
    }
    .comments-box {
      border: 1px solid #ddd;
      min-height: 60px;
      padding: 5px;
      margin-bottom: 15px;
    }
    @media print {
      body {
        color: black;
      }
      .form-label {
        background-color: #f5f5f5 !important;
        -webkit-print-color-adjust: exact;
        print-color-adjust: exact;
      }
      .container {
        padding: 0;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <img src="{{logoUrl}}" alt="Company Logo" class="logo">
      <h1>Backup Request Form</h1>
    </div>

    <div class="form-section">
      <div class="form-row">
        <div class="form-label">Name of Requestor</div>
        <div class="form-value">{{requestor.name}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Registered Email</div>
        <div class="form-value">{{requestor.email}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Section/Department</div>
        <div class="form-value">{{requestor.department}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Location</div>
        <div class="form-value">{{formData.data1}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Contact</div>
        <div class="form-value">{{formData.data2}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Request Date</div>
        <div class="form-value">{{formData.data4}}</div>
      </div>
    </div>
    
    <div class="form-section">
      <div class="form-row">
        <div class="form-label">File/Folder Name of Data to be backed up</div>
        <div class="form-value">{{formData.data5}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">File Location</div>
        <div class="form-value">{{formData.data6}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Start Date</div>
        <div class="form-value">{{formData.data7}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">End Date</div>
        <div class="form-value">{{formData.data8}}</div>
      </div>
    </div>
    
    <div class="form-section">
      <div class="form-row">
        <div class="form-label">Frequency</div>
        <div class="form-value">{{formData.data9}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Retention Period</div>
        <div class="form-value">{{formData.data11}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Backup Type</div>
        <div class="form-value">{{formData.data13}}</div>
      </div>
      <div class="form-row">
        <div class="form-label">Criticality of Data</div>
        <div class="form-value">{{formData.data14}}</div>
      </div>
    </div>

    <div class="approval-section">
      <h2>Approval</h2>
      <div class="form-row">
        <div class="form-label">Head of Department</div>
        <div class="form-value">
          <strong>Status:</strong> {{formData.data15}}
          <div class="signature-row">
            <div class="signature-box">
              {{#if formData.data16}}
                <img src="{{logoUrl}}" alt="HOD Signature" style="max-width: 150px; max-height: 50px;">
              {{else}}
                Signature
              {{/if}}
            </div>
            <div>
              Date: {{formData.data17}}
            </div>
          </div>
          <div>
            <strong>Comments:</strong>
            <div class="comments-box">{{formData.data18}}</div>
          </div>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-label">Head/Manager - IT</div>
        <div class="form-value">
          <strong>Status:</strong> {{formData.data19}}
          <div class="signature-row">
            <div class="signature-box">
              {{#if formData.data20}}
                <img src="{{logoUrl}}" alt="IT Manager Signature" style="max-width: 150px; max-height: 50px;">
              {{else}}
                Signature
              {{/if}}
            </div>
            <div>
              Date: {{formData.data21}}
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="approval-section">
      <h2>Acknowledgement (Backup Operator)</h2>
      <div class="signature-row">
        <div class="signature-box">
          {{#if formData.data22}}
            <img src="{{logoUrl}}" alt ="Backup Operator Signature" style="max-width: 150px; max-height: 50px;">
          {{else}}
            Signature
          {{/if}}
        </div>
        <div>
          Date: {{formData.data23}}
        </div>
      </div>
    </div>
  </div>
</body>
</html> 