<%- include('./components/head.ejs') -%>

<body>
  <!-- Sidebar -->

  <%- include('./components/navigation.ejs') -%>

  <!-- Content Wrapper -->
  <div id="content">
    <!-- Top Navigation -->
    <nav class="topbar">
      <div class="d-flex align-items-center">
        <button class="mobile-menu-toggle me-3" id="mobileMenuToggle">
          <i class="fas fa-bars"></i>
        </button>
        <h1 class="page-title mb-0">Ticket Dashboard</h1>
      </div>
      <div class="user-menu">
        <div class="dropdown">
          <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="me-2 d-none d-sm-inline fw-bold">John Doe</span>
            <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="User" class="user-avatar">
          </a>
          <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i> Profile</a></li>
            <li><a class="dropdown-item" href="#"><i class="fas fa-bell me-2"></i> Notifications</a></li>
            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i> Settings</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid p-4">

      <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
          <div class="card border-left-primary h-100 py-2 summary-card animate-in" style="animation-delay: 0.1s;">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col-auto">
                  <i class="fas fa-inbox fa-2x text-primary"></i>
                </div>
                <div class="col ml-3">
                  <div class="text-xs font-weight-bold text-uppercase mb-1">Pending Tickets</div>
                  <div class="h3 mb-0 font-weight-bold">42</div>
                
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
          <div class="card border-left-warning h-100 py-2 summary-card animate-in" style="animation-delay: 0.2s;">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col-auto">
                  <i class="fas fa-question-circle fa-2x text-warning"></i>
                </div>
                <div class="col ml-3">
                  <div class="text-xs font-weight-bold text-uppercase mb-1">Unassigned</div>
                  <div class="h3 mb-0 font-weight-bold">7</div>
                  
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
          <div class="card border-left-info h-100 py-2 summary-card animate-in" style="animation-delay: 0.3s;">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col-auto">
                  <i class="fas fa-clipboard-list fa-2x text-info"></i>
                </div>
                <div class="col ml-3">
                  <div class="text-xs font-weight-bold text-uppercase mb-1">Open Tickets</div>
                  <div class="h3 mb-0 font-weight-bold">18</div>
               
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
          <div class="card border-left-success h-100 py-2 summary-card animate-in" style="animation-delay: 0.4s;">
            <div class="card-body">
              <div class="row no-gutters align-items-center">
                <div class="col-auto">
                  <i class="fas fa-check-circle fa-2x text-success"></i>
                </div>
                <div class="col ml-3">
                  <div class="text-xs font-weight-bold text-uppercase mb-1">Completed Today</div>
                  <div class="h3 mb-0 font-weight-bold">24</div>
              
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Status Tabs -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- Tabs -->
        <ul class="nav nav-tabs" id="ticketTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link text-secondary active" id="open-tab" data-bs-toggle="tab" data-bs-target="#open-tickets" type="button" role="tab">
              <i class="fas fa-folder-open me-2"></i> Open Tickets
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link text-secondary" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending-tickets" type="button" role="tab">
              <i class="fas fa-clock me-2"></i> Pending
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link text-secondary" id="solved-tab" data-bs-toggle="tab" data-bs-target="#solved-tickets" type="button" role="tab">
              <i class="fas fa-check-circle me-2"></i> Solved
            </button>
          </li>
        </ul>
      
        <!-- Button -->
        <a href="/newticket" class="btn btn-primary ms-3" id="createTicketBtn">
          <i class="fas fa-plus me-1"></i> Create Ticket
        </a>
      </div>
      

      <!-- Search and Filter Bar -->
      <div class="card mb-4 search-filter-card animate-in">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-5 mb-3 mb-lg-0">
              <div class="input-group">
                <span class="input-group-text bg-transparent"><i class="fas fa-search"></i></span>
                <input type="text" id="searchTickets" class="form-control" placeholder="Search tickets by ID, subject, or customer...">
              </div>
            </div>
            <div class="col-lg-7">
              <div class="d-flex flex-wrap gap-2 justify-content-lg-end">
                <select class="form-select w-auto" id="priorityFilter">
                  <option value="">All Priorities</option>
                  <option value="high">High</option>
                  <option value="medium">Medium</option>
                  <option value="low">Low</option>
                </select>
                <select class="form-select w-auto" id="categoryFilter">
                  <option value="">All Categories</option>
                  <option value="support">Support</option>
                  <option value="billing">Billing</option>
                  <option value="sales">Sales</option>
                </select>
                <select class="form-select w-auto" id="dateFilter">
                  <option value="">All Dates</option>
                  <option value="today">Today</option>
                  <option value="week">This Week</option>
                  <option value="month">This Month</option>
                </select>
                <button class="btn btn-primary" id="applyFilters">
                  <i class="fas fa-filter me-2"></i>Apply Filters
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Tab Content -->
        <!-- Open Tickets Tab -->
          <div class="card mb-4">
            <div class="card-body p-0">
              <div class="table-responsive">
                <table class="table table-hover mb-0">
                  <thead>
                    <tr>
                      <th>Ticket ID</th>
                      <th>Subject</th>
                      <th>Customer</th>
                      <th>Priority</th>
                      <th>Created</th>
                      <th>Updated</th>
                      <th>Assigned</th>

                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr class="ticket-row animate-in" style="animation-delay: 0.1s;">
                      <td>#TKT-1001</td>
                      <td>
                        <div class="d-flex align-items-center">
                          <span class="badge bg-primary me-2">Support</span>
                          Login issues after system update
                        </div>
                      </td>
                      <td>
                        <div class="d-flex align-items-center">
                          Sarah Johnson
                        </div>
                      </td>
                      <td>
                        <span class="badge bg-danger">High</span>
                      </td>
                      <td>2 hours ago</td>
                      <td>1 hours ago</td>
                      <td>Midlaj</td>

                      <td>
                        <div class="d-flex gap-2">
                          <a href="/viewticket" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                          </a>
                    
                        </div>
                      </td>
                    </tr>
                    <tr class="ticket-row animate-in" style="animation-delay: 0.2s;">
                      <td>#TKT-1002</td>
                      <td>
                        <div class="d-flex align-items-center">
                          <span class="badge bg-warning me-2">Billing</span>
                          Invoice discrepancy for March
                        </div>
                      </td>
                      <td>
                        <div class="d-flex align-items-center">
                          Michael Brown
                        </div>
                      </td>
                      <td>
                        <span class="badge bg-warning">Medium</span>
                      </td>
                      <td>1 day ago</td>
                      <td>1 hours ago</td>
                      <td>Midlaj</td>

                      <td>
                        <div class="d-flex gap-2">
                          <a href="/viewticket" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                          </a>
                    
                        </div>
                      </td>
                    </tr>
                    <tr class="ticket-row animate-in" style="animation-delay: 0.3s;">
                      <td>#TKT-1003</td>
                      <td>
                        <div class="d-flex align-items-center">
                          <span class="badge bg-success me-2">Sales</span>
                          Request for product demo
                        </div>
                      </td>
                      <td>
                        <div class="d-flex align-items-center">
                          Emily Davis
                        </div>
                      </td>
                      <td>
                        <span class="badge bg-success">Low</span>
                      </td>
                      <td>2 days ago</td>
                      <td>1 hours ago</td>
                      <td>Midlaj</td>

                      <td>
                        <div class="d-flex gap-2">
                          <a href="/viewticket" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                          </a>
                    
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        <!-- Pending Tickets Tab -->
  

      <!-- View Ticket Modal -->
      
    </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>