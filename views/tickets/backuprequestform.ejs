<div class="card" id="backupRequestForm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Backup Request Form</h5>
      <span class="badge bg-info">Backup</span>
    </div>
    <div class="card-body">
      <form id="ticketForm" enctype="multipart/form-data">
        <!-- Requestor Information -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Requestor Information</h6>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="email" class="form-label">Registered Email</label>
                <input type="email" class="form-control" id="email" name="requestor.email" placeholder="Your email address" required>
                <div class="invalid-feedback">Please enter your email.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="name" class="form-label">Name of Requestor</label>
                <input type="text" class="form-control" id="name" name="requestor.name" placeholder="Your full name" required>
                <div class="invalid-feedback">Please enter your name.</div>
              </div>
            </div>
          
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="formData.data1" placeholder="Location (HQ/Any other site)" required>
                <div class="invalid-feedback">Please enter your location.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="contact" class="form-label">Contact</label>
                <input type="text" class="form-control" id="contact" name="formData.data2" placeholder="Contact details" required>
                <div class="invalid-feedback">Please enter your contact details.</div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="department" class="form-label">Section/Department</label>
                <input type="text" class="form-control" id="department" name="formData.data3" placeholder="Your department" required>
                <div class="invalid-feedback">Please enter your department.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="requestDate" class="form-label">Request Date</label>
                <input type="date" class="form-control" id="requestDate" name="formData.data4" required>
                <div class="invalid-feedback">Please select a request date.</div>
              </div>
            </div>
          </div>
        </div>
  
        <!-- Backup Details -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Backup Details</h6>
          </div>
          <div class="card-body">
          
            
            <div class="mb-3">
              <label for="fileFolder" class="form-label">File/Folder Name of Data to be backed up</label>
              <textarea class="form-control" id="fileFolder" name="formData.data5" rows="2" placeholder="Names of the files and folders that need to be backed up" required></textarea>
              <div class="invalid-feedback">Please provide file/folder names.</div>
            </div>
            
            <div class="mb-3">
              <label for="fileLocation" class="form-label">File Location</label>
              <textarea class="form-control" id="fileLocation" name="formData.data6" rows="2" placeholder="Path or address where the file or folder is stored" required></textarea>
              <div class="invalid-feedback">Please provide the file location.</div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="startDate" name="formData.data7" required>
                <div class="invalid-feedback">Please select a start date.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" class="form-control" id="endDate" name="formData.data8" required>
                <div class="invalid-feedback">Please select an end date.</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Backup Configuration -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Backup Configuration</h6>
          </div>
          <div class="card-body">
            <!-- Frequency -->
            <div class="mb-4">
              <label class="form-label">Frequency</label>
              <select class="form-select" name="formData.data9" required>
                <option value="">Select frequency</option>
                <option value="Daily">Daily</option>
                <option value="Weekly" selected>Weekly</option>
                <option value="Monthly">Monthly</option>
                <option value="Yearly">Yearly</option>
                <option value="Other">Other</option>
              </select>
              <div class="mt-2">
                <input type="text" class="form-control" name="formData.data10" placeholder="Please specify if Other">
              </div>
            </div>
            
            <!-- Retention Period -->
            <div class="mb-4">
              <label class="form-label">Retention Period</label>
              <select class="form-select" name="formData.data11" required>
                <option value="">Select retention period</option>
                <option value="1 week">1 week</option>
                <option value="1 month" selected>1 month</option>
                <option value="1 year">1 year</option>
                <option value="25 years">25 years</option>
                <option value="Other">Other</option>
              </select>
              <div class="mt-2">
                <input type="text" class="form-control" name="formData.data12" placeholder="Please specify if Other">
              </div>
            </div>
            
            <!-- Backup Type -->
            <div class="mb-4">
              <label class="form-label">Backup Type</label>
              <select class="form-select" name="formData.data13" required>
                <option value="">Select backup type</option>
                <option value="Full" selected>Full</option>
                <option value="Differential">Differential</option>
                <option value="Incremental">Incremental</option>
              </select>
            </div>
            
            <!-- Category -->
            <div class="mb-4">
              <label class="form-label">Category</label>
              <select class="form-select" name="category" required>
                <option value="">Select category</option>
                <option value="Standard">Standard</option>
                <option value="Emergency">Emergency</option>
                <option value="Scheduled">Scheduled</option>
              </select>
            </div>
            
            <!-- Priority -->
            <div class="mb-4">
              <label class="form-label">Priority</label>
              <select class="form-select" name="priority" required>
                <option value="">Select priority</option>
                <option value="High">High</option>
                <option value="Medium" selected>Medium</option>
                <option value="Low">Low</option>
              </select>
            </div>
            
            <!-- Criticality of Data -->
            <div class="mb-4">
              <label class="form-label">Criticality of Data</label>
              <select class="form-select" name="formData.data14" required>
                <option value="">Select criticality</option>
                <option value="High">High</option>
                <option value="Medium" selected>Medium</option>
                <option value="Low">Low</option>
              </select>
            </div>
          </div>
        </div>
        
        <!-- Approval Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Approval</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label class="form-label">Head of Department</label>
              <select class="form-select mb-2" name="formData.data15">
                <option value="">Select approval status</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
                <option value="Pending" selected>Pending</option>
              </select>
              <div class="row align-items-center">
                <div class="col-md-8">
                  <input type="text" class="form-control" name="formData.data16" placeholder="Signature">
                </div>
                <div class="col-md-4">
                  <input type="date" class="form-control" name="formData.data17">
                </div>
              </div>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Comments</label>
              <textarea class="form-control" name="formData.data18" rows="2"></textarea>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Head/Manager - IT</label>
              <select class="form-select mb-2" name="formData.data19">
                <option value="">Select approval status</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
                <option value="Pending" selected>Pending</option>
              </select>
              <div class="row align-items-center">
                <div class="col-md-8">
                  <input type="text" class="form-control" name="formData.data20" placeholder="Signature">
                </div>
                <div class="col-md-4">
                  <input type="date" class="form-control" name="formData.data21">
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Acknowledgement Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Acknowledgement (Backup Operator)</h6>
          </div>
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-8">
                <input type="text" class="form-control" name="formData.data22" placeholder="Signature">
              </div>
              <div class="col-md-4">
                <input type="date" class="form-control" name="formData.data23">
              </div>
            </div>
          </div>
        </div>
        
        <input type="hidden"  name="ticketType" value="BackupRequest">
