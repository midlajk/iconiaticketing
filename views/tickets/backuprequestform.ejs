<div class="card" id="backupRequestForm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Backup Request Form</h5>
      <span class="badge bg-info">Backup</span>
    </div>
    <div class="card-body">
      <form id="backupForm" enctype="multipart/form-data">
        <!-- Requestor Information -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Requestor Information</h6>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="requestorName" class="form-label">Name of Requestor</label>
                <input type="text" class="form-control" id="requestorName" name="requestor.name" placeholder="Name of the employee requesting for the backup" required>
                <div class="invalid-feedback">Please enter your name.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="department" class="form-label">Section/Department</label>
                <input type="text" class="form-control" id="department" name="department" placeholder="Department employee requesting for the backup" required>
                <div class="invalid-feedback">Please enter your department.</div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="location" placeholder="Location (HQ/Any other site) of the employee" required>
                <div class="invalid-feedback">Please enter your location.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="contact" class="form-label">Contact</label>
                <input type="text" class="form-control" id="contact" name="contact" placeholder="Contact details of the employee" required>
                <div class="invalid-feedback">Please enter your contact details.</div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="requestDate" class="form-label">Request Date</label>
                <input type="date" class="form-control" id="requestDate" name="requestDate" required>
                <div class="invalid-feedback">Please select a request date.</div>
              </div>
            </div>
          </div>
        </div>
  
        <!-- Backup Details -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Backup Details</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label for="fileFolder" class="form-label">File/Folder Name of Data to be backed up</label>
              <textarea class="form-control" id="fileFolder" name="fileFolder" rows="2" placeholder="Names of the files and folders that contain important data that needs to be backed up" required></textarea>
              <div class="invalid-feedback">Please provide file/folder names.</div>
            </div>
            
            <div class="mb-3">
              <label for="fileLocation" class="form-label">File Location</label>
              <textarea class="form-control" id="fileLocation" name="fileLocation" rows="2" placeholder="Path or address where the specific file or folder is stored" required></textarea>
              <div class="invalid-feedback">Please provide the file location.</div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="startDate" name="startDate" required>
                <div class="invalid-feedback">Please select a start date.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" class="form-control" id="endDate" name="endDate" required>
                <div class="invalid-feedback">Please select an end date.</div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Backup Configuration -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Backup Configuration</h6>
          </div>
          <div class="card-body">
            <!-- Frequency -->
            <div class="mb-4">
              <label class="form-label">Frequency</label>
              <div class="btn-group w-100" role="group">
                <input type="radio" class="btn-check" name="frequency" id="frequency-daily" value="Daily" autocomplete="off">
                <label class="btn btn-outline-primary" for="frequency-daily">Daily</label>
  
                <input type="radio" class="btn-check" name="frequency" id="frequency-weekly" value="Weekly" autocomplete="off" checked>
                <label class="btn btn-outline-primary" for="frequency-weekly">Weekly</label>
  
                <input type="radio" class="btn-check" name="frequency" id="frequency-monthly" value="Monthly" autocomplete="off">
                <label class="btn btn-outline-primary" for="frequency-monthly">Monthly</label>
                
                <input type="radio" class="btn-check" name="frequency" id="frequency-yearly" value="Yearly" autocomplete="off">
                <label class="btn btn-outline-primary" for="frequency-yearly">Yearly</label>
                
                <input type="radio" class="btn-check" name="frequency" id="frequency-other" value="Other" autocomplete="off">
                <label class="btn btn-outline-primary" for="frequency-other">Other</label>
              </div>
              <div id="otherFrequencyInput" class="mt-2 d-none">
                <input type="text" class="form-control" placeholder="Please specify frequency">
              </div>
            </div>
            
            <!-- Retention Period -->
            <div class="mb-4">
              <label class="form-label">Retention Period</label>
              <div class="btn-group w-100" role="group">
                <input type="radio" class="btn-check" name="retention" id="retention-week" value="1 week" autocomplete="off">
                <label class="btn btn-outline-secondary" for="retention-week">1 week</label>
  
                <input type="radio" class="btn-check" name="retention" id="retention-month" value="1 month" autocomplete="off" checked>
                <label class="btn btn-outline-secondary" for="retention-month">1 month</label>
  
                <input type="radio" class="btn-check" name="retention" id="retention-year" value="1 year" autocomplete="off">
                <label class="btn btn-outline-secondary" for="retention-year">1 year</label>
                
                <input type="radio" class="btn-check" name="retention" id="retention-25years" value="25 years" autocomplete="off">
                <label class="btn btn-outline-secondary" for="retention-25years">25 years</label>
                
                <input type="radio" class="btn-check" name="retention" id="retention-other" value="Other" autocomplete="off">
                <label class="btn btn-outline-secondary" for="retention-other">Other</label>
              </div>
              <div id="otherRetentionInput" class="mt-2 d-none">
                <input type="text" class="form-control" placeholder="Please specify retention period">
              </div>
            </div>
            
            <!-- Backup Type -->
            <div class="mb-4">
              <label class="form-label">Backup Type</label>
              <div class="btn-group w-100" role="group">
                <input type="radio" class="btn-check" name="backupType" id="backupType-full" value="Full" autocomplete="off" checked>
                <label class="btn btn-outline-success" for="backupType-full">Full</label>
  
                <input type="radio" class="btn-check" name="backupType" id="backupType-differential" value="Differential" autocomplete="off">
                <label class="btn btn-outline-success" for="backupType-differential">Differential</label>
  
                <input type="radio" class="btn-check" name="backupType" id="backupType-incremental" value="Incremental" autocomplete="off">
                <label class="btn btn-outline-success" for="backupType-incremental">Incremental</label>
              </div>
            </div>
            
            <!-- Criticality of Data -->
            <div class="mb-4">
              <label class="form-label">Criticality of Data</label>
              <div class="btn-group w-100" role="group">
                <input type="radio" class="btn-check" name="criticality" id="criticality-high" value="High" autocomplete="off">
                <label class="btn btn-outline-danger" for="criticality-high">High</label>
  
                <input type="radio" class="btn-check" name="criticality" id="criticality-medium" value="Medium" autocomplete="off" checked>
                <label class="btn btn-outline-warning" for="criticality-medium">Medium</label>
  
                <input type="radio" class="btn-check" name="criticality" id="criticality-low" value="Low" autocomplete="off">
                <label class="btn btn-outline-success" for="criticality-low">Low</label>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Approval Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Approval</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label class="form-label">Head of Department</label>
              <div class="d-flex gap-3 mb-2">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="hodApproval" id="hodApproved" value="Approved">
                  <label class="form-check-label" for="hodApproved">Approved</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="hodApproval" id="hodRejected" value="Rejected">
                  <label class="form-check-label" for="hodRejected">Rejected</label>
                </div>
              </div>
              <div class="row align-items-center">
                <div class="col-md-8">
                  <input type="text" class="form-control" id="hodSignature" name="hodSignature" placeholder="Signature">
                </div>
                <div class="col-md-4">
                  <input type="date" class="form-control" id="hodDate" name="hodDate">
                </div>
              </div>
            </div>
            
            <div class="mb-3">
              <label for="hodComments" class="form-label">Comments</label>
              <textarea class="form-control" id="hodComments" name="hodComments" rows="2"></textarea>
            </div>
            
            <div class="mb-3">
              <label class="form-label">Head/Manager - IT</label>
              <div class="d-flex gap-3 mb-2">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="itApproval" id="itApproved" value="Approved">
                  <label class="form-check-label" for="itApproved">Approved</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="itApproval" id="itRejected" value="Rejected">
                  <label class="form-check-label" for="itRejected">Rejected</label>
                </div>
              </div>
              <div class="row align-items-center">
                <div class="col-md-8">
                  <input type="text" class="form-control" id="itSignature" name="itSignature" placeholder="Signature">
                </div>
                <div class="col-md-4">
                  <input type="date" class="form-control" id="itDate" name="itDate">
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Acknowledgement Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Acknowledgement (Backup Operator)</h6>
          </div>
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-8">
                <input type="text" class="form-control" id="operatorSignature" name="operatorSignature" placeholder="Signature">
              </div>
              <div class="col-md-4">
                <input type="date" class="form-control" id="operatorDate" name="operatorDate">
              </div>
            </div>
          </div>
        </div>
        
        <!-- Submit Buttons -->
        <div class="d-flex justify-content-end gap-3">
          <button type="button" class="btn btn-outline-secondary" id="cancelBackupButton">
            Cancel
          </button>
          <button type="submit" class="btn btn-primary" id="submitBackupButton">
            <i class="fas fa-save me-2"></i> Submit Request
          </button>
        </div>
      </form>
    </div>
  </div>
  
  <script>
    // Show/hide "Other" input fields
    document.getElementById('frequency-other').addEventListener('change', function() {
      document.getElementById('otherFrequencyInput').classList.toggle('d-none', !this.checked);
    });
    
    document.getElementById('retention-other').addEventListener('change', function() {
      document.getElementById('otherRetentionInput').classList.toggle('d-none', !this.checked);
    });
    
    // Form validation (similar to your general ticket form)
    document.getElementById('backupForm').addEventListener('submit', function(event) {
      if (!this.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      this.classList.add('was-validated');
    });
  </script>