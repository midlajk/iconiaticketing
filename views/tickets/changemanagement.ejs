<div class="card" id="changeManagementForm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Change Management Form</h5>
      <span class="badge bg-purple">Management</span>
    </div>
    <div class="card-body">
      <form id="ticketForm" enctype="multipart/form-data">
        <!-- Hidden Fields -->
        <input type="hidden" name="ticketType" value="ChangeManagement">
        <input type="hidden" name="status" value="New">
        
        <!-- 1. General Information -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">1. General Information</h6>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="email" class="form-label">Registered Email</label>
                <select  class="form-control emailInput" id="email"  name="requestor.email"  required></select>
                <div class="invalid-feedback">Please enter your email.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="name" class="form-label">Name of Requestor</label>
                <select type="text" class="form-control" id="name" name="requestor.name" required>></select>
                <div class="invalid-feedback">Please enter your name.</div>
              </div>
            </div>
          
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="changeRequestId" class="form-label">Change Request ID</label>
                <input type="text" class="form-control" id="changeRequestId" name="formData.data1" required>
                <div class="invalid-feedback">Please enter Change Request ID.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="dateSubmitted" class="form-label">Date Submitted</label>
                <input type="date" class="form-control" id="dateSubmitted" name="formData.data2" required>
                <div class="invalid-feedback">Please select submission date.</div>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="department" class="form-label">Department/Section</label>
                <input type="text" class="form-control" id="department" name="formData.data3" required>
                <div class="invalid-feedback">Please enter department/section.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="changeManager" class="form-label">Change Manager</label>
                <input type="text" class="form-control" id="changeManager" name="formData.data4" required>
                <div class="invalid-feedback">Please enter Change Manager name.</div>
              </div>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="assignedTo" class="form-label">Assigned To</label>
                <input type="text" class="form-control" id="assignedTo" name="formData.data5" required>
                <div class="invalid-feedback">Please enter assignee name.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="changeTitle" class="form-label">Change Title</label>
                <input type="text" class="form-control form-control-lg" id="changeTitle" name="title" required>
                <div class="invalid-feedback">Please provide a title for the change.</div>
              </div>
            </div>
          </div>
        </div>
  
        <!-- 2. Change Details -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">2. Change Details</h6>
          </div>
          <div class="card-body">
            <div class="mb-4">
              <label class="form-label">Type of Change</label>
              <select class="form-select" name="category" required>
                <option value="">Select type of change</option>
                <option value="Emergency Change">Emergency Change</option>
                <option value="Normal Change" selected>Normal Change</option>
                <option value="Standard Change">Standard Change</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label for="changeSummary" class="form-label">Summary of Change</label>
              <textarea class="form-control" id="changeSummary" name="description" rows="3" required></textarea>
              <div class="invalid-feedback">Please provide a summary of the change.</div>
            </div>
            
            <div class="mb-3">
              <label for="changeReason" class="form-label">Reason for Change</label>
              <textarea class="form-control" id="changeReason" name="formData.data6" rows="3" required></textarea>
              <div class="invalid-feedback">Please provide a reason for the change.</div>
            </div>
            
            <div class="mb-3">
              <label for="changeScope" class="form-label">Scope of Change</label>
              <textarea class="form-control" id="changeScope" name="formData.data7" rows="3" required></textarea>
              <div class="invalid-feedback">Please define the scope of change.</div>
            </div>
            
            <div class="mb-4">
              <label class="form-label">Priority</label>
              <select class="form-select" name="priority" required>
                <option value="">Select priority</option>
                <option value="Low">Low</option>
                <option value="Medium" selected>Medium</option>
                <option value="High">High</option>
              </select>
            </div>
            
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="proposedDate" class="form-label">Proposed Implementation Date</label>
                <input type="date" class="form-control" id="proposedDate" name="formData.data8" required>
                <div class="invalid-feedback">Please select proposed date.</div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="estimatedEffort" class="form-label">Estimated Effort (hours)</label>
                <input type="number" class="form-control" id="estimatedEffort" name="formData.data9" min="0" step="0.5" required>
                <div class="invalid-feedback">Please enter estimated effort.</div>
              </div>
            </div>
            
            <div class="mb-3">
              <label for="resourcesRequired" class="form-label">Resources Required</label>
              <textarea class="form-control" id="resourcesRequired" name="formData.data10" rows="2" required></textarea>
              <div class="invalid-feedback">Please specify required resources.</div>
            </div>
          </div>
        </div>
        
        <!-- 3. Impact Analysis -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">3. Impact Analysis</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label for="businessImpact" class="form-label">Impact on Business Operations</label>
              <textarea class="form-control" id="businessImpact" name="formData.data11" rows="2" required></textarea>
              <div class="invalid-feedback">Please describe business impact.</div>
            </div>
            
            <div class="mb-3">
              <label for="userImpact" class="form-label">Impact on Users/Departments</label>
              <textarea class="form-control" id="userImpact" name="formData.data12" rows="2" required></textarea>
              <div class="invalid-feedback">Please describe user impact.</div>
            </div>
            
            <div class="mb-3">
              <label for="systemImpact" class="form-label">Impact on Systems/Services</label>
              <textarea class="form-control" id="systemImpact" name="formData.data13" rows="2" required></textarea>
              <div class="invalid-feedback">Please describe system impact.</div>
            </div>
            
            <div class="mb-3">
              <label for="riskAssessment" class="form-label">Risk Assessment</label>
              <select class="form-select" name="formData.data14" required>
                <option value="">Select risk level</option>
                <option value="Low">Low</option>
                <option value="Medium" selected>Medium</option>
                <option value="High">High</option>
              </select>
            </div>
          </div>
        </div>
        
        <!-- 4. Implementation Plan -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">4. Implementation Plan</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label for="implementationDate" class="form-label">Planned Implementation Date</label>
              <input type="date" class="form-control" id="implementationDate" name="formData.data15" required>
              <div class="invalid-feedback">Please select planned implementation date.</div>
            </div>
            
            <div class="mb-3">
              <label for="implementationSteps" class="form-label">Implementation Steps</label>
              <textarea class="form-control" id="implementationSteps" name="formData.data16" rows="5" required placeholder="List all implementation steps here"></textarea>
              <div class="invalid-feedback">Please provide implementation steps.</div>
            </div>
            
            <div class="mb-3">
              <label for="backupPlan" class="form-label">Backup/Contingency Plan</label>
              <textarea class="form-control" id="backupPlan" name="formData.data17" rows="3" required></textarea>
              <div class="invalid-feedback">Please provide a backup plan.</div>
            </div>
            
            <div class="mb-3">
              <label for="rollbackPlan" class="form-label">Rollback Plan</label>
              <textarea class="form-control" id="rollbackPlan" name="formData.data18" rows="3" required></textarea>
              <div class="invalid-feedback">Please provide a rollback plan.</div>
            </div>
          </div>
        </div>
        
        <!-- 5. Testing and Validation -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">5. Testing and Validation</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label for="testingPlan" class="form-label">Testing Plan</label>
              <textarea class="form-control" id="testingPlan" name="formData.data19" rows="3" required></textarea>
              <div class="invalid-feedback">Please provide a testing plan.</div>
            </div>
            
            <div class="mb-3">
              <label for="testingEnvironment" class="form-label">Testing Environment</label>
              <input type="text" class="form-control" id="testingEnvironment" name="formData.data20" required>
              <div class="invalid-feedback">Please specify the testing environment.</div>
            </div>
          </div>
        </div>
        <% if (user) { %>

        <!-- 6. Approval Process -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">6. Approval Process</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label class="form-label">Change Advisory Board (CAB) Approval</label>
              <select class="form-select" name="formData.data21">
                <option value="">Select approval status</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
                <option value="Pending" selected>Pending</option>
              </select>
            </div>
            
            <div class="mb-3">
              <label for="approvalDate" class="form-label">Approval Date</label>
              <input type="date" class="form-control" id="approvalDate" name="formData.data22">
            </div>
            
            <div class="mb-3">
              <label for="approvers" class="form-label">Approvers (list names separated by commas)</label>
              <input type="text" class="form-control" id="approvers" name="formData.data23" placeholder="e.g. John Doe, Jane Smith">
            </div>
          </div>
        </div>
        
        <!-- 7. Comments and Notes -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">7. Comments and Notes</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <textarea class="form-control" id="comments" name="formData.data24" rows="3"></textarea>
            </div>
          </div>
        </div>
        <%}%>
        <!-- Submit Buttons -->
        
  
