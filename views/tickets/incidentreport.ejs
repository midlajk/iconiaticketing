<div class="card" id="securityIncidentForm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Information Security Incident Report</h5>
      <span class="badge bg-danger">Security</span>
    </div>
    <div class="card-body">
      <form id="ticketForm" enctype="multipart/form-data">
        <!-- Hidden fields for schema requirements -->
        <input type="hidden" name="ticketType" value="IncidentReport">
        <input type="hidden" name="status" value="New">
        <!-- Requestor Information -->
        <div class="row mb-4">
          <div class="col-md-6">
            <label for="requestorName" class="form-label">Requestor Name</label>
            <input type="text" class="form-control" id="requestorName" name="requestor.name" placeholder="Your name" required>
          </div>
          <div class="col-md-6">
            <label for="requestorEmail" class="form-label">Requestor Email</label>
            <input type="email" class="form-control" id="requestorEmail" name="requestor.email" placeholder="Your email" required>
          </div>
        </div>
        
        <div class="row mb-4">
          <div class="col-md-6">
            <label for="requestorCustomerId" class="form-label">Customer ID</label>
            <input type="text" class="form-control" id="requestorCustomerId" name="requestor.customerid" placeholder="Your customer ID">
          </div>
          <div class="col-md-6">
            <label for="title" class="form-label">Incident Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Brief title for the incident" required>
          </div>
        </div>
        
        <!-- Basic Incident Information -->
        <div class="row mb-4">
          <div class="col-md-6">
            <label for="incidentId" class="form-label">Incident No.</label>
            <input type="text" class="form-control" id="incidentId" name="formData.data1" value="2023JUN-000" readonly>
          </div>
          <div class="col-md-6">
            <label for="severity" class="form-label">Severity</label>
            <select class="form-select" id="severity" name="priority" required>
              <option value="" selected disabled>Choose an item</option>
              <option value="Low">Low</option>
              <option value="Medium">Medium</option>
              <option value="High">High</option>
              <option value="Critical">Critical</option>
            </select>
            <div class="invalid-feedback">Please select severity level.</div>
          </div>
        </div>
  
        <div class="row mb-4">
          <div class="col-md-6">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" id="category" name="category" required>
              <option value="" selected disabled>Choose an item</option>
              <option value="Malware">Malware</option>
              <option value="Phishing">Phishing</option>
              <option value="Unauthorized Access">Unauthorized Access</option>
              <option value="Data Breach">Data Breach</option>
              <option value="DoS/DDoS">DoS/DDoS</option>
              <option value="Social Engineering">Social Engineering</option>
              <option value="Other">Other</option>
            </select>
            <div class="invalid-feedback">Please select incident category.</div>
          </div>
          <div class="col-md-6">
            <label for="categoryOther" class="form-label">Category (Other)</label>
            <input type="text" class="form-control" id="categoryOther" name="formData.data2" disabled>
          </div>
        </div>
  
        <div class="row mb-4">
          <div class="col-md-6">
            <label for="repetitiveIncident" class="form-label">Repetitive Incident</label>
            <select class="form-select" id="repetitiveIncident" name="formData.data3" required>
              <option value="" selected disabled>Choose an item</option>
              <option value="Yes">Yes</option>
              <option value="No">No</option>
            </select>
            <div class="invalid-feedback">Please specify if this is a repetitive incident.</div>
          </div>
          <div class="col-md-6">
            <label for="incidentStatus" class="form-label">Status of Incident</label>
            <select class="form-select" id="incidentStatus" name="status" required>
              <option value="Open" selected>Open</option>
              <option value="In Progress">In Progress</option>
              <option value="Contained">Contained</option>
              <option value="Resolved">Resolved</option>
              <option value="Closed">Closed</option>
            </select>
            <div class="invalid-feedback">Please select incident status.</div>
          </div>
        </div>
  
        <div class="mb-4" id="repetitiveIncidentDetails" style="display: none;">
          <label for="repetitiveIncidentComments" class="form-label">Repetitive Incident Comments</label>
          <textarea class="form-control" id="repetitiveIncidentComments" name="formData.data4" rows="3" placeholder="Provide details of the previous incident (What/When/Impact)"></textarea>
        </div>
  
        <div class="mb-4">
          <label for="reportedBy" class="form-label">Reported by</label>
          <input type="text" class="form-control" id="reportedBy" name="formData.data5" placeholder="Name of the user who reported the incident" required>
          <div class="invalid-feedback">Please provide the name of who reported this incident.</div>
        </div>
  
        <div class="mb-4">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" id="description" name="description" rows="3" placeholder="Detailed description of the incident" required></textarea>
        </div>
  
        <!-- Incident Details Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Incident Details</h6>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="detectedDateTime" class="form-label">Detected Date & Time</label>
                <input type="datetime-local" class="form-control" id="detectedDateTime" name="formData.data6" required>
                <div class="invalid-feedback">Please provide when the incident was detected.</div>
              </div>
              <div class="col-md-6">
                <label for="reportedToDoHDate" class="form-label">Reported to DoH Date</label>
                <input type="date" class="form-control" id="reportedToDoHDate" name="formData.data7" required>
                <div class="invalid-feedback">Please provide when the incident was reported to DoH.</div>
              </div>
            </div>
  
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="closedDateTime" class="form-label">Closed Date & Time</label>
                <input type="datetime-local" class="form-control" id="closedDateTime" name="formData.data8">
              </div>
              <div class="col-md-6">
                <label for="detectedSource" class="form-label">Detected Source</label>
                <input type="text" class="form-control" id="detectedSource" name="formData.data9" placeholder="Source through which the incident was detected" required>
                <div class="invalid-feedback">Please provide the detection source.</div>
              </div>
            </div>
  
            <div class="mb-3">
              <label for="affectedSystems" class="form-label">Affected Systems/Services</label>
              <textarea class="form-control" id="affectedSystems" name="formData.data10" rows="2" placeholder="Details about affected systems/services (Host name/application/server etc.)" required></textarea>
              <div class="invalid-feedback">Please provide information about affected systems.</div>
            </div>
  
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="monetaryDamage" class="form-label">Monetary Damage</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" id="monetaryDamage" name="formData.data11" placeholder="Cost of the damage caused by the incident">
                </div>
              </div>
              <div class="col-md-6">
                <label for="outageInformation" class="form-label">Outage Information</label>
                <input type="text" class="form-control" id="outageInformation" name="formData.data12" placeholder="Start date, end date and time of the downtime" required>
                <div class="invalid-feedback">Please provide outage information.</div>
              </div>
            </div>
  
            <div class="mb-3">
              <label for="businessImpact" class="form-label">Business Impact Caused</label>
              <textarea class="form-control" id="businessImpact" name="formData.data13" rows="2" placeholder="Impact of the incident on the business/operations/services" required></textarea>
              <div class="invalid-feedback">Please provide information about business impact.</div>
            </div>
  
            <div class="mb-3">
              <label for="suspectedMethod" class="form-label">Suspected Method</label>
              <textarea class="form-control" id="suspectedMethod" name="formData.data14" rows="2" placeholder="Suspected cause for security Incident from the first level of investigation" required></textarea>
              <div class="invalid-feedback">Please provide suspected method information.</div>
            </div>
  
            <div class="mb-3">
              <label for="incidentSummary" class="form-label">Summary/Description</label>
              <textarea class="form-control" id="incidentSummary" name="formData.data15" rows="4" placeholder="Brief about the incident and behaviour" required></textarea>
              <div class="invalid-feedback">Please provide an incident summary.</div>
            </div>
  
            <div class="mb-3">
              <label for="policiesProcedures" class="form-label">Policies and Procedures</label>
              <textarea class="form-control" id="policiesProcedures" name="formData.data16" rows="2" placeholder="Policies & procedures in place that are considered relevant to the incident" required></textarea>
              <div class="invalid-feedback">Please provide relevant policies and procedures.</div>
            </div>
  
            <div class="mb-3">
              <label for="reasonDelay" class="form-label">Reason for Delay</label>
              <textarea class="form-control" id="reasonDelay" name="formData.data17" rows="2" placeholder="Reason for delay in providing notification timely to the authorities"></textarea>
            </div>
          </div>
        </div>
  
        <!-- Host/User Identification Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Host/User Identification</h6>
          </div>
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="sourceUser" class="form-label">Source User/Name</label>
                <input type="text" class="form-control" id="sourceUser" name="formData.data18" placeholder="Name of the affected user">
              </div>
              <div class="col-md-6">
                <label for="userEmail" class="form-label">User ID/Email ID</label>
                <input type="email" class="form-control" id="userEmail" name="formData.data19" placeholder="Email ID of affected user">
              </div>
            </div>
  
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="sourceIP" class="form-label">Source IP</label>
                <input type="text" class="form-control" id="sourceIP" name="formData.data20" placeholder="IP addresses from which the attack is originated">
              </div>
              <div class="col-md-6">
                <label for="destinationIP" class="form-label">Destination IP</label>
                <input type="text" class="form-control" id="destinationIP" name="formData.data21" placeholder="IP addresses of the Impacted Systems">
              </div>
            </div>
  
            <div class="mb-3">
              <label for="destinationDomain" class="form-label">Destination Domain</label>
              <input type="text" class="form-control" id="destinationDomain" name="formData.data22" placeholder="Domain name of the Impacted System">
            </div>
  
            <div class="mb-3">
              <label for="otherArtifacts" class="form-label">Others</label>
              <textarea class="form-control" id="otherArtifacts" name="formData.data23" rows="2" placeholder="Provide if any additional artefacts/information available in regards to the Incident"></textarea>
            </div>
          </div>
        </div>
  
        <!-- Root Cause Analysis Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Root Cause Analysis</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <textarea class="form-control" id="rootCauseAnalysis" name="formData.data24" rows="3" placeholder="Fundamental, underlying, system-related reason why an incident occurred that identifies one or more correctable system failures"></textarea>
            </div>
          </div>
        </div>
  
        <!-- Containment & Recovery Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Containment & Recovery</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label for="containmentMeasures" class="form-label">Containment Measures</label>
              <textarea class="form-control" id="containmentMeasures" name="formData.data25" rows="3" placeholder="Set of actions that are to be performed for immediate containment of the incident"></textarea>
            </div>
            
            <div class="mb-3">
              <label for="recoveryMeasures" class="form-label">Recovery Measures</label>
              <textarea class="form-control" id="recoveryMeasures" name="formData.data26" rows="3" placeholder="Steps/actions performed to ensure incident eradication and recovery"></textarea>
            </div>
          </div>
        </div>
  
        <!-- Prevention & Lessons Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Prevention & Lessons</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label for="preventiveActions" class="form-label">Preventive Actions</label>
              <textarea class="form-control" id="preventiveActions" name="formData.data27" rows="3" placeholder="Actions taken to prevent similar incident/attack reoccurrence in the future"></textarea>
            </div>
            
            <div class="mb-3">
              <label for="lessonLearned" class="form-label">Lesson Learned</label>
              <textarea class="form-control" id="lessonLearned" name="formData.data28" rows="3" placeholder="Security gaps, weaknesses, and other areas that need attention"></textarea>
            </div>
          </div>
        </div>
  
        <!-- Evidence Collections Section -->
        <div class="card mb-4">
          <div class="card-header">
            <h6 class="mb-0">Evidence Collections</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label for="suspectedEmail" class="form-label">Suspected Email</label>
              <textarea class="form-control" id="suspectedEmail" name="formData.data29" rows="2" placeholder="Details about the email source collected as evidence"></textarea>
            </div>
            
            <div class="mb-3">
              <label for="siemAlert" class="form-label">SIEM Alert</label>
              <textarea class="form-control" id="siemAlert" name="formData.data30" rows="2" placeholder="Details about SIEM logs collected as evidence"></textarea>
            </div>
            
            <div class="mb-3">
              <label for="firewallLogs" class="form-label">Firewall Logs</label>
              <textarea class="form-control" id="firewallLogs" name="formData.data31" rows="2" placeholder="Details about Firewall logs collected as evidence"></textarea>
            </div>
            
            <div class="mb-3">
              <label for="otherEvidence" class="form-label">Others</label>
              <textarea class="form-control" id="otherEvidence" name="formData.data32" rows="2" placeholder="Details about any other information collected as evidence"></textarea>
            </div>
          </div>
        </div>
  